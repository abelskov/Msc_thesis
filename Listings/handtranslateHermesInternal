                     // local variable declarations
("main" , [], Block([VarDecl("a", "u32", pos),
                     ArrayDecl("arr", "4", "u32", pos)]
                     // statements
                    [Inc (Var ("a", pos), pos),
                     Update (Add,
                             Array("arr", Var("a"), pos),
                             Const("1337", pos),
                             pos)]
                    // pos
                   , pos), pos)
